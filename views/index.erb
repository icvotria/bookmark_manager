<h1> Bookmarks! </h1>

<form action='/add'>
  <input type="submit" value="Add a bookmark please!" />
</form>

<ol>
  <% @bookmarks.each do |bookmark| %>
    <li>
      <a href="<%= bookmark.url %>">
        <%= bookmark.title %>
      </a>
      <form action="/<%= bookmark.id %>" method="post">
        <input type='hidden' name='_method' value='DELETE'/>
        <input type="submit" value="Delete bookmark" />
      </form>
    </li>
  <% end %>
</ol>
